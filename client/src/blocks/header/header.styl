@import "../../../helpers/mixins.styl"
@import "../cart-sidebar/cart-sidebar.styl"

$bl = 'header'

.{$bl}
  padding-top 20px
  background-color #fff
  font-size 0

  &__centerer
    centerer()
    padding-right 20px
    padding-left 20px

  &__left
    display inline-block
    vertical-align top

  &__right
    display inline-block
    vertical-align top
    float right
    padding-top 18px
    padding-right 8px
    text-align right

  &__logo
    display inline-block
    vertical-align top
    width 50px
    height 50px

  &__menu
    display inline-block
    vertical-align top
    width calc(100% - 50px)
    padding-top 20px
    padding-right 10px
    padding-left 10px
    padding-bottom 36px
    overflow hidden

  &__menu-item
    position relative
    display inline-block
    vertical-align top
    margin-right 20px
    margin-left 20px
    font-size 14px
    line-height 1
    font-family $font-din-pro-cond
    font-weight 500
    text-transform uppercase
    text-decoration none
    color #333
    letter-spacing .5px

    &:hover
    &:active
    &:visited
    &:focus
      color #333
      text-decoration none

    &:before
      content ''
      position absolute
      bottom -36px
      display block
      background transparent
      width 100%
      height 4px
      transform translateY(100%)

    &:hover
      color #0089cf

    &_active
      color #0089cf
      &:hover
      &:active
      &:visited
      &:focus
        color #0089cf

      &:before
        background-color #0089cf
        transform translateY(0)

  &__icon
    display inline-block
    vertical-align middle
    margin-right 8px
    fill #666

    &_cart
      margin-top -2px

    &_auth
      margin-top -2px

  &__search
    display inline-block
    vertical-align top
    font-size 14px
    text-transform uppercase
    font-family $font-din-pro-cond
    font-weight 500
    color #333
    letter-spacing .5px
    cursor pointer

    &:hover
      color #0089cf

  &__cart
    @extend .{$bl}__search
    margin-left 28px

  &__cart-count
    color #0089cf
    margin-left 4px

  &__auth
    @extend .{$bl}__search
    margin-left 30px
