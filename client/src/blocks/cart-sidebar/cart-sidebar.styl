@import '../../../node_modules/semantic-ui-sidebar/sidebar.min.css';
@import "../light-input/light-input.styl"
@import "../cart-entry/cart-entry.styl"
@import "../delete-dialog/delete-dialog.styl"
@import "../light-select/light-select.styl"
@import "../checkbox/checkbox.styl"

$bl = 'cart-sidebar';

.ui.left.sidebar,
.ui.right.sidebar
  width 560px
  background-color #f2f9fd

.{$bl}
  &__informations
    background-color #fff
    padding 20px 35px

  &__cart-contents
    background-color transparent
    padding 0px 35px 20px 35px

  &__header
    font-family $font-din-pro-cond
    font-size 30px
    font-weight 500

  &__title
    font-family $font-din-pro-cond
    font-size 15px
    font-weight 500
    padding-top 10px
    letter-spacing 0.8px

  &__input-row
    width 100%
    margin 10px 0

  &__items-list
    padding-left 0
    list-style none
    border-top 1px solid  #e4e4e4
    border-bottom 1px solid #e4e4e4
    margin-top 10px
    margin-bottom 0

  &__product-row
    display table
    width 100%

    & + &
      border-top 1px solid  #e4e4e4

  &__resume
    display table
    width 200px
    float right
    font-family $font-din-pro-cond
    font-weight 500

  &__resume-row
    line-height 30px
    display table-row

  &__clause
    text-align left
    display table-cell

  &__cost
    text-align right
    display table-cell

  &__agreement
    clear both
    padding-top 15px
    font-family $font-roboto
    font-weight 300
    font-size 15px

  &__confirmation
    padding-top 15px
    text-align right

.flex-input
  width calc(50% - 10px)
  & + &
    margin-left 20px
  &_once
    width 100%



