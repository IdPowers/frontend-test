mixin CartEntry(obj)
  if !obj
    - obj = {}
  +b.cart-entry(id= obj.id)
    +e.counter
      +e.increase-btn
        img(src=require('assets/plus.png'))
      +e.amount= obj.amount
      +e.decrease-btn
        img(src=require('assets/less.png'))
    +e.product-image
      +e.IMG(src=obj.image)
    +e.description
      +e.brand= obj.brand
      +e.name= obj.name
    +e.product-size-title SIZE
    +e.product-size
      +e.SPAN.size-val= obj.size
    +e.price= '$ ' + obj.price

