$bl = 'light-select'

.{$bl}
  display inline-block
  width 100%

  & .select2-container
    display inline-block
    height 35px

  & .select2-selection--single
    outline none
    border-radius 0
    height 35px
    border 0
    border-bottom 1px solid #e4e4e4

    & .select2-selection__rendered
      line-height 35px
      padding-left 0px

    & .select2-selection__placeholder
      color #e4e4e4
      font-weight 300
      font-family $font-roboto
      font-size 14px

    & .select2-selection__arrow
      top 0px
      bottom 0px
      margin auto