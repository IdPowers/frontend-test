include /blocks/framed-select/framed-select
include /blocks/regular-button/regular-button

mixin ProductPreview(obj)
  if !obj
    - obj = {}
  +b.product-preview
    +e.centerer
      +e.main-image
        +e.IMG(src=require('assets/sneakers.png'))
      +e.panel
        +e.wish-button(src=require('assets/wish.png'))
        +e.item-info
          +e.brand nike
          +e.name air max tavas sd
          +e.price $ 160.00
        +e.item-color-selection
          +e.colors-plain-list colors  &#8212;
            +e.LABEL.color-label
              +e.INPUT.color-checkbox(type="radio" name="colors" value="0" checked)
              +e black/pink
            +e.LABEL.color-label
              +e.INPUT.color-checkbox(type="radio" name="colors" value="1")
              +e pow/tour
            +e.LABEL.color-label
              +e.INPUT.color-checkbox(type="radio" name="colors" value="2")
              +e yellow/white
          +e.colors-pics-list
            +e.LABEL.color-pic-frame
              +e.IMG.selected-pic(src=require('assets/black-pink.png'))
            +e.LABEL.color-pic-frame
              +e.IMG(src=require('assets/black-white.png'))
            +e.LABEL.color-pic-frame
              +e.IMG(src=require('assets/black-pink.png'))
        +e.LABEL.size-charts Size charts
        +e.item-size-selection
          +FramedSelect({ id: 'preview-size-list', width: '120px', options: [1, 2, 3, 4] })
          +RegularButton({ id: 'preview-add-cart', text: 'Add to cart'})
