@import "../../../helpers/mixins.styl";

$bl = 'textbox'

.{$bl}
  width 100%
  height 100%

  &__input
    width 100%
    height 100%
    border 0
    border-bottom 2px solid #cccccc 
    padding-bottom .6em
    font-family $font-roboto
    font-size .85em

  &__input:focus 
    outline none
  
  &__input::placeholder
    color #cccccc