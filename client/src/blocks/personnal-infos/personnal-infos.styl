@import "../../../helpers/mixins.styl";

$bl = 'personnal-infos'

.{$bl}
  width 100%
  height 100%

  &__title
    text-transform uppercase
    font-family $font-din-pro-cond
    font-size .85em
    font-weight 600
    margin-left 2.8em
    letter-spacing .04em

  &__personnal-infos-country-gap
    width 14.5em
    height 1em
    margin-left 2.45em
    margin-top .7em
    position relative

  &__personnal-infos-first-name-gap
    display inline-block 
    width 14.5em
    height 1.9em
    margin-left 2.45em
    margin-top 1.65em

  &__personnal-infos-second-name-gap
    display inline-block
    width 15.5em
    height 1.9em
    margin-left 1.1em
    margin-top 1.65em

  &__personnal-infos-address-gap
    display inline-block
    width 77%
    height 1.9em
    margin-left 2.5em
    margin-top .55em

  &__personnal-infos-postal-code-gap
    display inline-block
    width 14.5em
    height 1.9em
    margin-left 2.45em
    position relative
    bottom 1em

  &__personnal-infos-city-gap
    display inline-block
    width 15.5em
    height 1.9em
    margin-left 1.1em
    margin-top 1.65em
    position relative
    bottom 1em

  &__personnal-infos-email-gap
    display inline-block
    width 14.5em
    height 1.9em
    margin-left 2.45em
    margin-top 1em
    position relative
    bottom 2.05em

  &__personnal-infos-phone-gap
    display inline-block
    width 15.5em
    height 1.9em
    margin-left 1.1em
    margin-top 1.65em
    position relative
    bottom 2.1em